<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeSplash" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme27" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimaryBlack</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="dividerColor">@color/dividerLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme27">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="dividerColor">@color/dividerDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="AppThemeDark.NoActionBar" parent="AppThemeDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeBlack" parent="AppThemeDark">
        <item name="colorSurface">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="android:windowBackground">@color/colorPrimaryBlack</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AppThemeBlack.NoActionBar" parent="AppThemeBlack">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemePatch">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppThemeActionBarTheme</item>
        <item name="imageButtonStyle">@style/AppThemeImageButton</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppThemeActionBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="AppThemeImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:padding">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DoneTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/donePrimary</item>
    </style>

    <style name="DoneDescription" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/doneSecondary</item>
    </style>
</resources>
